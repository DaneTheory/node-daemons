{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "indent": [2, 4],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "strict": [0, "global"],
    "arrow-body-style": 0,
    "newline-per-chained-call": 0,
    "prefer-rest-params": 0
  }
}
